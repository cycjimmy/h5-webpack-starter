//-
   _style: 样式文件

h2(class=_style.title,
  data-swiper-animation="fadeInUp",
  data-duration="0.5s",
  data-delay=".2s") Image upload controls

div(class=_style.btnsWrapper,
  data-swiper-animation="fadeInUp",
  data-duration="0.5s",
  data-delay=".5s")
  a(class=_style.chooseBtn, href="javascript:;")
    | Select
    input(class=_style.chooseInput,
      type="file",
      accept="image/*")

  a(class=_style.uploadBtn, href="javascript:;") Upload

div(data-swiper-animation="fadeInUp",
  data-duration="0.5s",
  data-delay=".6s")
  div(class=_style.showBox)
  div(class=_style.showInfo)
