doctype html
html(lang='en')
  head
    include includes/meta.pug
    title H5 Webpack Starter
    base(href="./")

    style.
      * {
        margin: 0;
        padding: 0;
      }

      html, body {
        position: relative;
        height: 100%;
      }

      html {
        font-size: 100px;
        line-height: 1.4;
      }

      body {
        font-size: 15px;
        font-family: -apple-system-font, "Helvetica Neue", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
      }

      .loading-overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: #0a4f56;
      }

      .loading-pic {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
        width: 20vw;
        height: 20vw;
      }

    //- swiper global style
    link(rel="stylesheet" href="//cdn.bootcss.com/animate.css/3.5.2/animate.min.css")
    link(rel="stylesheet" href="//cdn.bootcss.com/Swiper/3.4.2/css/swiper.min.css")

    //- WeChat JSSDK
      script(src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js")

    //- videoJs
      script(src="//cdn.bootcss.com/video.js/6.2.1/video.min.js")

      link(rel="stylesheet" href="//cdn.bootcss.com/video.js/6.2.1/video-js.min.css")

  body
    .loading-overlay
      img.loading-pic(src=require('../images/loading.svg'))
    .swiper-container.main-screen

    //- three.js
    script(src="//cdn.bootcss.com/three.js/r83/three.min.js")